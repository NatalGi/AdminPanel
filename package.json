{
  "name": "SoloProject_1",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "init": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp images sass css vendor js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "watch": "npm-run-all -p watch:*",
    "watch:sassprefixer": "onchange sass -- npm-run-all build-dev:sass build:autoprefixer",
    "watch:browser-sync": "browser-sync start -s -f \"css/*.css\" \"*.html\" \"js/*.js\"",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "test": "npm-run-all test:*",
    "test:html": "globstar nu-html-checker *.html pages/*.html",
    "build": "npm-run-all test build:*",
    "build:clean": "rimraf build/*",
    "build:sass": "node-sass --output-style compressed -o build/css sass",
    "build:autoprefixer": "globstar autoprefixer-cli css/*.css",
    "build:compress": "imagemin images/* --out-dir=build/images",
    "build:uglify-js": "bash bash-scripts/uglify-js-files.sh",
    "build:copy-vendor": "cp -a vendor/. build/vendor/",
    "build:fonts": "cp -a fonts/. build/fonts/",
    "build:copy-pages": "cp -a pages/. build/pages/",
    "build:copy-index": "cp -a index.html build/index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.26.3",
    "globstar": "^1.0.0",
    "imagemin-cli": "^4.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "onchange": "^4.1.0",
    "rimraf": "^2.6.2",
    "uglify-es": "^3.3.9"
  }
}
